APP_NAME=Laravel
APP_ENV=testing
APP_KEY=base64:ktBnRhaL8Cg2/vHJOiCO3cockx4E4XYVBrIXtXZL+ws=
APP_DEBUG=true
APP_URL=http://localhost

# Database - SQLite in-memory для быстрого тестирования
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Cache - Array driver (в памяти, без персистентности)
CACHE_DRIVER=array
CACHE_STORE=array

# Queue - Sync для синхронного выполнения в тестах
QUEUE_CONNECTION=sync

# Session - Array driver (в памяти)
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Mail - Log driver (логирует письма вместо отправки)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcast
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# API конфигурация (используйте тестовые ключи)
DADATA_TOKEN="test_token_12345"
DADATA_SECRET="test_secret_12345"
DADATA_TIMEOUT=10

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Log
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Redis (если используется в тестах)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached
MEMCACHED_HOST=127.0.0.1

# AWS (если используется)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Vite
VITE_APP_NAME="${APP_NAME}"
